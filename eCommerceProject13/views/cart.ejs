<%- include('./partials/header') %>
    <div class="w-full h-screen  ">

        <% const uniqueCart = [...new Map(user.cart.map(item => [item.name, item])).values()]; %>
<!-- it help to remove the repeting of the same product -->
        <% uniqueCart.forEach(function(item){ %>
        <div class="flex items-start px-20 py-5 gap-10 mb-10 bg-[#e6e1e0] items-center">
        <div class="w-[30%] rounded-md overflow-hidden ">
            <div class="w-full flex justify-center items-center h-80 bg-[#<%= item.bgcolor %>]">
                <img class="h-[18rem]" src="data:image/jpeg;base64, <%= item.image.toString('base64') %>" alt="">
                <!-- changing mongodb binary buffer data to image -->
            </div>
            <div class="w-full flex justify-between px-5 py-4 bg-[#<%= item.panelcolor %>] text-white">
                <h3 class="text-2xl"><%= item.name %></h3>
                <div class="flex items-center gap-2 text-black">
                    <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                    <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                    <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                </div>
            </div>
            <div class="flex items-center justify-between px-5 py-3 bg-[#999]">
                <h4 class="text-lg">Net Total</h4>
                <h2 class="text-lg">₹ <%= Number(item.price) + 20 - Number(item.discount) %></h2>
            </div>
        </div>
        <div class="w-[70%] ">
            <h3 class="text-xl">Price Breakdown</h3>
            <div class="px-10 mt-5">
                <div class="flex mt-2">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4>₹ <%= Number(item.price) %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Discount on MRP</h4>
                    <h4><%= Number(item.discount) %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Platform Fee</h4>
                    <h4>₹ 20</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>
            <form action=""></form>
        </div>
        </div>
        <% }) %>
        <div class="w-full h-[1px] bg-black mt-10 justify-between"></div>
            <div class="flex justify-center items-center gap-4 mt-5 mb-10">
                <h3 class="w-1/3 text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">₹ <%= bill %></h3>
            </div>
    </div>
    <%- include('./partials/footer') %>